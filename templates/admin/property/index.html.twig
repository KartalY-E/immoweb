{% extends 'base.html.twig' %}

{% block title %}Property index
{% endblock %}

{% block body %}
	<h1>Property index</h1>

	<button class="btn btn-outline-dark my-2">
		<a href="{{ path('property_new') }}">Create new property</a>
	</button>
	<table class="table">
		<thead>
			<tr>
				<th>Nr</th>
				<th>Price</th>
				<th>Code</th>
				<th>Bedroom</th>
				<th>Bathroom</th>
				<th>SquareMeters</th>
				<th>BuildYear</th>
				<th>Property Type</th>
				<th>City</th>
				<th>Street</th>	
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for property in properties %}
				<tr>
					<td>{{ loop.index }}</td>
					<td>{{ property.price }}&euro;</td>
					<td>{{ property.slug }}</td>
					<td>{{ property.bedroom }}</td>
					<td>{{ property.bathroom }}</td>
					<td>{{ property.squareMeters }}</td>
					<td>{{ property.buildYear ? property.buildYear|date('Y-m-d') : '' }}</td>
					<td>{{ property.propertyType}}</td>
					<td>{{ property.city }}</td>
					<td>{{ property.street }}</td>
					<td>
						<button class="btn btn-outline-dark my-2">
							<a href="{{ path('property_show', {'slug': property.slug}) }}">show</a>
						</button>
						<button class="btn btn-outline-dark my-2">
							<a href="{{ path('property_edit', {'slug': property.slug}) }}">edit</a>
						</button>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="10">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
