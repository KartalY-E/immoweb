{% extends 'base.html.twig' %}

{% block title %}Properties
{% endblock %}

{% block body %}
	<h1>Properties</h1>
	<div class="mx-auto">
		{{ form_start(form) }}
		<div id="property_filter">
			{{ form_errors(form) }}

			{{ form_row(form.price) }}
			{{ form_row(form.bedroom) }}
			{{ form_row(form.bathroom) }}
			{{ form_row(form.city) }}
			{{ form_row(form.propertyType) }}
			{{ form_row(form.submit) }}

		</div>
		{{ form_end(form) }}
		<div class="clearfix"></div>
	</div>
	<div class="card-deck">
		<div class="justify-content-center my-4">
			<div class="row justify-content-md-left ">
				{% for property in properties %}
					{{ include('property/card.html.twig') }}
				{% else %}
					<p>no records</p>
				{% endfor %}
			</div>
		</div>
		<div class="navigation pagination justify-content-center">
			{{ knp_pagination_render(properties) }}
		</div>
	</div>
{% endblock %}
