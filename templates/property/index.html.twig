{% extends 'base.html.twig' %}

{% block title %}Properties
{% endblock %}

{% block body %}
	<h1>Properties</h1>
	<div
		class="mx-auto" style="width: 100%;">
		{# {{ form(form) }} #}
		{{ form_start(form) }}
		<div id="property_filter">
			{{ form_errors(form) }}

			{{ form_row(form.price) }}
			{{ form_row(form.bedroom) }}
			{{ form_row(form.bathroom) }}
			{{ form_row(form.city) }}
			{{ form_row(form.propertyType) }}
			{{ form_row(form.submit) }}

		</div>
		{{ form_end(form) }}
		<div class="clearfix"></div>
	</div>
	<div class="card-deck py-4">
		<div class="d-flex justify-content-center">
			<div class="row justify-content-md-center">
				{% for property in properties %}
					{{ include('property/card.html.twig') }}
				{% else %}
					<p>no records</p>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
